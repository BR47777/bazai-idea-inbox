# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Alternative: Llama Cloud Configuration (if using instead of OpenAI)
# LLAMA_API_KEY=your_llama_api_key
# LLAMA_MODEL=llama-2-70b

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bazai_dev
DIRECT_URL=postgresql://user:password@localhost:5432/bazai_dev

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=your-domain.com
AUTH_SECRET=your-auth-secret-key

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_SCORING=true
NEXT_PUBLIC_ENABLE_OUTLINE_GENERATION=true
NEXT_PUBLIC_ENABLE_SHORTS_HOOKS=true

# Logging
LOG_LEVEL=debug
NEXT_PUBLIC_LOG_LEVEL=debug
